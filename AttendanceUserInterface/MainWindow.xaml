<Window x:Class="AttendanceUserInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttendanceUserInterface"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="525">
    <Grid x:Name="attendanceUI">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                
            </Grid.RowDefinitions>
        </Grid>
        <ListBox x:Name="studentList" Grid.Column="0" Width="200" Height="400" SelectionChanged="studentList_SelectionChanged"/>
    </Grid>
</Window>
